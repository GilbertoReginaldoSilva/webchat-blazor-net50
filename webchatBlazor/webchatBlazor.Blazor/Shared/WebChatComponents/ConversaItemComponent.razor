@if(this.Conversa != null)
{
    <tr>
        <td>@Conversa.IdChat</td>        
        <td>@(new MarkupString(Conversa.Pergunta))</td>        
        <td>@(new MarkupString(Conversa.Resposta))</td>
        <td>@Conversa.StatusConversa</td>
        <td><span class="oi oi-pencil" aria-hidden="true"></span></td>
        <td><span class="oi oi-trash" aria-hidden="true"></span></td>
    </tr>
}
